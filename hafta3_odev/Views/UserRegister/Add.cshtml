@model EntityLayer.Concrete.User

<form asp-action="Add" asp-controller="UserRegister" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="@Model.SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Mail</label>
        <input asp-for="@Model.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre</label>
        <input asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>
