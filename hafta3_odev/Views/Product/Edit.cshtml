@model EntityLayer.Concrete.Product

<form asp-action="Edit" asp-controller="Product" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="@Model.ProductId" />
    <div class="form-group">
        <label>Ürün Adı</label>
        <input asp-for="@Model.ProductNameName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Açıklaması</label>
        <input asp-for="@Model.ProductDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Fiyatı</label>
        <input asp-for="@Model.ProductPrice" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
</form>
